#!/bin/bash

source /etc/lsb-release

set -e

case "$1" in
  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  configure)
    systemctl enable first-boot
    systemctl enable sdio-hciattach || true

    # enable proper ppa
    if [[ -f /etc/apt/sources.list.d/ayufan-rock64-$DISTRIB_CODENAME-ppa.list.bak ]]; then
      dpkg-divert --local \
        --divert /etc/apt/sources.list.d/ayufan-rock64-$DISTRIB_CODENAME-ppa.list \
        --rename /etc/apt/sources.list.d/ayufan-rock64-$DISTRIB_CODENAME-ppa.list.bak || true
    fi

    # update hwdb
    systemd-hwdb update

    # update dconf
    if which dconf &> /dev/null; then
      /usr/bin/dconf update
    fi

    # generate extlinux.conf
    /usr/local/sbin/update-extlinux.sh
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

exit 0
